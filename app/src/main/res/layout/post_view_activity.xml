<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--post view-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/posts"
        android:id="@+id/postView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/postTitle"
                android:text="TITLE HERE"
                android:textSize="40dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USERNAME asks:"
                android:id="@+id/usernameAsks"
                android:textSize="20dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="jkdlfghsdkjlghsdflkgsfdjfsf"
                android:id="@+id/postContent"
                android:textSize="25dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </ScrollView>

    <!--ratings buttons-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ratingButtonsSpace"
        android:layout_below="@id/postView"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/upvoteButton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/ratingsNumber"
            android:text="69"
            android:textSize="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/downvoteButton"/>

    </TableRow>

    <!--comments view-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ratingButtonsSpace"
        android:id="@+id/commentsView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/commentsSection"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:background="@drawable/posts"
                android:text="@string/post_content"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:background="@drawable/posts"
                android:text="@string/post_content"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:clickable="true"
                android:background="@drawable/posts"
                android:text="@string/post_content"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"/>


        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Add Comment"
        android:id="@+id/toCommentButton"
        android:background="@drawable/buttons"
        app:backgroundTint="@color/theme"
        android:fontFamily="@font/proxima"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="@color/white"/>
</RelativeLayout>