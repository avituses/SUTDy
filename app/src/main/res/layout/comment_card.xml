<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/comments">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_user"
            android:text="user answered:"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proxima"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/comment_content"
            android:text="askdfaskdljnlkasdjvnlakjsdvnalkvalfdaldfvnlkakldjfvnaklfjnvkaldfnv"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proxima"/>
        <ImageView
            android:id="@+id/comment_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right"
            android:gravity="center">
            <ImageButton
                android:layout_width = "30dp"
                android:layout_height= "30dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:src="@drawable/upvote"
                android:id="@+id/upvote"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingvalue"
                android:layout_gravity="center"
                android:text="100"
                android:textSize="15dp"
                android:fontFamily="@font/proxima"/>
            <ImageButton
                android:layout_width = "30dp"
                android:layout_height= "30dp"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:src="@drawable/downvote"
                android:id="@+id/downvote"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>